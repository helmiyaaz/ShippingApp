@{
}
<link rel="stylesheet" href="~/css/Analyze.css">
@await Html.PartialAsync("_ShipmentPlanTabs")

<div class="card p-3"> 
    <div class="row g-3">
        <div class="col-md-3">
            <label for="deliveryPoint" class="form-label">Delivery Point:</label>
            <select class="form-select" id="deliveryPoint">
                <option selected>Pilih...</option>
                <option value="1">Point 1</option>
                <option value="2">Point 2</option>
            </select>
        </div>
        <div class="col-md-9 d-flex align-items-end">
            <button class="btn btn-secondary btn-sm">Click to analyze</button>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Bagian Kiri -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-2">
                    <h6>Table 1 (Left Side)</h6>
                   <div class="table-responsive">

                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr class="table-dark">
                                <th>Part #</th>
                                <th>Description</th>
                                <th>Div Point</th>
                                <th>Mode</th>
                                <th>Qty</th>
                                <th>LSD</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="6" class="text-center">No data available</td>
                            </tr>
                        </tbody>
                    </table>
                   </div>

                </div>
            </div>
        </div>

        <!-- Bagian Kanan -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-2">
                    <h5>Summary</h5>
                    <div class="row p-2">
                        <div class="col-md-3">
                            <label class="form-label">Part Number:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Plan Qty:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Stock Qty:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Open ASN:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3 mt-2">
                            <label class="form-label">Prepared Qty:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3 mt-2">
                            <label class="form-label">WIP:</label>
                            <input type="text" class="form-control highlight">
                        </div>
                    </div>

                    <h6>Open Order List:</h6>
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr class="table-dark">
                                <th>SO</th>
                                <th>Line</th>
                                <th>Part #</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>LSD</th>
                                <th>PSD</th>
                                <th>Acc Qty</th>
                                <th>Bal Stock</th>
                                <th>Bal ASN</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="10" class="text-center">No data available</td>
                            </tr>
                        </tbody>
                    </table>

                    <h6>WIP Mapping (Based on SAP - ZPPWIP uploaded in the morning)</h6>
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr class="table-dark">
                                <th>Part #</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>OP #</th>
                                <th>Work Ctr</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center">No data available</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>



