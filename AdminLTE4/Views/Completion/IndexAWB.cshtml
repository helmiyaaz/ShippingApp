<link rel="stylesheet" href="~/css/Shipment.css">
@await Html.PartialAsync("_ShipmentCompletionTabs")

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-7 border p-2">
                <div class="row">
                    <div class="col-md-5">
                        <div class="row mb-2">
                            <div class="col-md-8">
                                <p>Open List Of Shipment</p>
                            </div>
                            <div class="col-md-4 text-end">
                                <button class="btn btn-secondary btn-sm">Refresh</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Shipment#</th>
                                        <th>Dlv Point</th>
                                        <th>Lot#</th>
                                        <th>Customer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>4931</td>
                                        <td>21242</td>
                                        <td>60457784</td>
                                        <td>40</td>                               
                                    </tr>
                                    <tr>
                                        <td>4932</td>
                                        <td>21242</td>
                                        <td>60457784</td>
                                        <td>60</td>
                                    </tr>
                                    <tr>
                                        <td>5399</td>
                                        <td>23932</td>
                                        <td>60471034</td>
                                        <td>20</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="col-md-7">
                        <p>Click Shipment # and then input AWB, Mode and Shipment Date</p>
                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 180px;">Shipment#:</label>
                                <input type="text" class="form-control me-2">
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 180px;">Date:</label>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 180px;">AWB Number:</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 120px;">Mode:</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 180px;">Less KITE Reason:</label>
                                <select id="customer" class="form-select form-select-sm">
                                    <option selected>Choose...</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12 d-flex align-items-center">
                                <label class="form-label col-form-label-sm me-2" style="width: 220px;">Est Dlv Cost:</label>
                                <input type="text" class="form-control me-2">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6 d-flex align-items-center">
                                <button class="btn btn-secondary w-100 btn-sm me-2">Update</button>
                                <button class="btn btn-danger w-100 btn-sm">Cancel</button>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5 border p-2">
                <div class="row mb-2">
                    <label for="awbNumber" class="col-sm-2 col-form-label col-form-label-sm">AWB #:</label>
                    <div class="col-sm-8">
                        <select id="awbNumber" class="form-select form-select-sm">
                            <option value="">Pilih AWB</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-secondary btn-sm w-100">Update</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <label for="pod" class="col-sm-2 col-form-label col-form-label-sm">POD:</label>
                    <div class="col-sm-10">
                        <input type="text" id="pod" class="form-control form-control-sm" disabled>
                    </div>
                </div>
                <h6>Change AWB:</h6>
                <div class="row mb-2">
                    <label for="oldAwb" class="col-sm-2 col-form-label col-form-label-sm">Old AWB#:</label>
                    <div class="col-sm-4">
                        <input type="text" id="oldAwb" class="form-control form-control-sm">
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-secondary w-100 btn-sm">Update</button>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="newAwb" class="col-sm-2 col-form-label col-form-label-sm">New AWB#:</label>
                    <div class="col-sm-4">
                        <input type="text" id="newAwb" class="form-control form-control-sm">
                    </div>
                </div>

            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Search AWB#:</label>
                    <input type="text" class="form-control form-control-sm">
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label class="form-label col-form-label-sm me-2" style="width: 80px;">AWB#:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label class="form-label col-form-label-sm me-2" style="width: 80px;">Mode:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label class="form-label col-form-label-sm me-2" style="width: 100px;">Dlv Point:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
            <div class="col-md-4 d-flex align-items-center">
                <label class="form-label col-form-label-sm me-2" style="width: 100px;">Customer:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>AWB</th>
                                <th>Dlv Point</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="col-md-5">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Part Number</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>Weight/pc</th>
                                <th>Price/Unit</th>
                                <th>POD</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Shipment Date:</label>
                    <input type="date" class="form-control form-control-sm">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Total Price:</label>
                    <input type="text" class="form-control form-control-sm">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Total CoS:</label>
                    <input type="text" class="form-control form-control-sm">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Number Of CoSs:</label>
                    <input type="text" class="form-control form-control-sm">
                </div>
                <div class="mb-2 d-flex align-items-center">
                    <label class="form-label col-form-label-sm me-2" style="width: 180px;">Gross Weight:</label>
                    <input type="text" class="form-control form-control-sm">
                </div>
                <div class="mb-2">
                    <button class="btn btn-secondary btn-sm">Print</button>
                </div>
            </div>
        </div>
    </div>
</div>