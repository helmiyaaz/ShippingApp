@{
}
<link rel="stylesheet" href="~/css/Shipment.css">
@await Html.PartialAsync("_ShipmentCompletionTabs")


<div class="card p-3">
    <div class="row mt-3">
        <!-- Bagian Kiri -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-2">
                    <div class="col-md-14 d-flex flex-wrap gap-3">
                        <div class="col-md-3">
                            <label class="form-label">Delivery Point:</label>
                            <select class="form-select">
                                <option selected>Pilih...</option>
                                <option value="1">Customer 1</option>
                                <option value="2">Customer 2</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <label class="form-label">Lott#:</label>
                            <select class="form-select">
                                <option selected>Pilih...</option>
                                <option value="1">Customer 1</option>
                                <option value="2">Customer 2</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Shipment#:</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-4  d-flex align-items-end">
                            <button class="btn btn-secondary me-2">Update</button>
                        </div>
                    </div>
                    <h6>Detail Unpack List</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr class="table-dark">
                                    <th>Doc#</th>
                                    <th>SO</th>
                                    <th>Line</th>
                                    <th>Part#</th>
                                    <th>Qty</th>
                                    <th>Batch#</th>
                                    <th>DN</th>
                                    <th>Carton</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center">No data available</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <!-- Bagian Kanan -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body p-2">
                     <div class="row p-2">
                        <form>
                            <div class="row mb-1">
                                <div class="col-md-6">
                                    <label class="form-label">Standard Outer Box Dimension:</label>
                                    <div class="d-flex">
                                        <input type="text" class="form-control me-2" value="41" disabled>
                                        <span class="me-2">X</span>
                                        <input type="text" class="form-control me-2 " value="32" disabled>
                                        <span class="me-2">X</span>
                                        <input type="text" class="form-control me-2" value="28" disabled>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>

                    <h6>Sumaary By Carton Number:</h6>
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr class="table-dark">
                                <th> </th>
                                <th>#</th>
                                <th>Gross Wght</th>
                                <th>Net Wght</th>
                                <th>L</th>
                                <th>W</th>
                                <th>H</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="10" class="text-center">No data available</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label>Total Gross Weight:</label>
                            <input type="text" class="form-control" value="0" disabled>
                        </div>
                        <div class="col-md-6">
                            <label>Total Net Weight:</label>
                            <input type="text" class="form-control" value="0" disabled>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label>AVG Gross Weight:</label>
                            <input type="text" class="form-control" value="0" disabled>
                        </div>
                        <div class="col-md-6">
                            <label>Number of Ctn:</label>
                            <input type="text" class="form-control" value="0" disabled>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label>Number of CoC:</label>
                            <input type="text" class="form-control" value="0" disabled>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="#" class="d-block mt-4">Go to MyDHL</a>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>
