@{
}
@await Html.PartialAsync("_ShipmentCompletionTabs")
<link rel="stylesheet" href="~/css/Shipment.css">


<div class="card">
    <div class="card-body">
        <div class="row mt-3">
            <div class="col-md-2 border p-2 me-2">
                <h6>Cancel AWB</h6>
                <label for="awb">AWB#:</label>
                <select class="form-select mb-2" id="awb"></select>
                <button class="btn btn-secondary w-100">Cancel</button>
            </div>
            <div class="col-md-2 border p-2 me-2">
                <h6>Cancel Shipment Number</h6>
                <label for="ship">Ship #:</label>
                <select class="form-select mb-2" id="ship"></select>
                <button class="btn btn-secondary w-100">Cancel</button>
            </div>
            <div class="col-md-2 border p-3 me-2">
                <h6>Cancel CoC</h6>
                <label for="dn">DN#:</label>
                <select class="form-select mb-2" id="dn"></select>
                <button class="btn btn-secondary w-100">Cancel</button>
            </div>
            <div class="col-md-2 border p-3">
                <h6>Cancel ASN</h6>
                <label for="asn">ASN#:</label>
                <select class="form-select mb-2" id="asn"></select>
                <button class="btn btn-secondary w-100">Cancel</button>
            </div>
        </div>
    </div>
</div>
