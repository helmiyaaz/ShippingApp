@{
}
@await Html.PartialAsync("_ShipmentCompletionTabs")
<link rel="stylesheet" href="~/css/Shipment.css">

<div class="card">
    <div class="card-body">
        <h6>Create Shipment Documents Folder</h6>
        <div class="row ">
            <div class="col-md-6 mt-2">
                <div class="mb-2">
                    <label class="form-label">Delivery Point:</label>
                    <select id="delivery-point" class="form-select">
                        <option selected>Choose...</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="form-label">Shipment Date:</label>
                    <input id="shipment-date" class="form-control" type="date">
                </div>
                <div class="mb-2">
                    <label class="form-label">Shipment Mode:</label>
                    <select id="shipment-mode" class="form-select">
                        <option selected>Choose...</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button class="btn btn-secondary">Create</button>
            </div>
        </div>
    </div>
</div>